<data>
    <xpath expr="/form/notebook/page[@id='invoice']/field[@name='currency']"
            position="after">
        <label name="conformities_state"/>
        <field name="conformities_state"/>
    </xpath>
    <xpath expr="/form/notebook/page[@id='info']" position="after">
        <page string="Review Conformity" id="conform" col="6">
            <field name="conformities" colspan="3"/>
            <field name="conformities_summary" colspan="3" widget="richtext" toolbar="0" yexpand="1" yfill="1"/>
        </page>
    </xpath>
</data>
