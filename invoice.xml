<tryton>
    <data>
        <record model="ir.ui.view" id="configuration_view_form">
            <field name="model">account.configuration</field>
            <field name="inherit" ref="account.configuration_view_form"/>
            <field name="name">configuration_form</field>
        </record>
        <record model="ir.ui.view" id="conform_group_view_form">
            <field name="model">account.invoice.conform_group</field>
            <field name="type">form</field>
            <field name="name">conform_group_form</field>
        </record>
        <record model="ir.ui.view" id="conform_group_view_tree">
            <field name="model">account.invoice.conform_group</field>
            <field name="type">tree</field>
            <field name="name">conform_group_tree</field>
        </record>

        <record model="ir.action.act_window" id="act_conform_group_form">
            <field name="name">Conform Group</field>
            <field name="res_model">account.invoice.conform_group</field>
        </record>
        <record model="ir.action.act_window.view" id="act_conform_group_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="conform_group_view_tree"/>
            <field name="act_window" ref="act_conform_group_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_conform_group_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="conform_group_view_form"/>
            <field name="act_window" ref="act_conform_group_form"/>
        </record>

        <record model="ir.model.access" id="access_conform_group">
            <field name="model"
                search="[('model', '=', 'account.invoice.conform_group')]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.model.access" id="access_conform_group_admin">
            <field name="model"
                search="[('model', '=', 'account.invoice.conform_group')]"/>
            <field name="group" ref="account.group_account_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>

        <menuitem id="menu_counform_group" name="Conform Groups"
                parent="account.menu_account_configuration"
                action="act_conform_group_form" sequence="50"/>


        <record model="ir.ui.view" id="invoice_view_form">
            <field name="model">account.invoice</field>
            <field name="type">form</field>
            <field name="inherit" ref="account_invoice.invoice_view_form"/>
            <field name="name">invoice_form</field>
            <field name="domain"></field>
        </record>
        <record model="ir.ui.view" id="invoice_view_tree">
            <field name="model">account.invoice</field>
            <field name="type">tree</field>
            <field name="inherit" ref="account_invoice.invoice_view_tree"/>
            <field name="name">invoice_tree</field>
            <field name="domain">context.get('type') in ('in_invoice', 'in_credit_note')</field>
        </record>


        <record model="ir.action.act_window" id="act_invoice_conform_invoice_form">
            <field name="name">Invoices to Conform</field>
            <field name="res_model">account.invoice</field>
            <field name="domain">[('type', '=', 'in_invoice'), ('conformity_state', '!=', None), ('conform_by.users', '=', Eval('context', {}).get('_user', 0))]</field>
            <field name="context">{'type': 'in_invoice'}</field>
        </record>
        <record model="ir.action.act_window.view"
                 id="act_invoice_conform_invoice_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="invoice_view_tree"/>
            <field name="act_window" ref="act_invoice_conform_invoice_form"/>
        </record>
        <record model="ir.action.act_window.view"
                 id="act_invoice_conform_invoice_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="invoice_view_form"/>
            <field name="act_window" ref="act_invoice_conform_invoice_form"/>
        </record>
        <record model="ir.action.act_window.domain"
                 id="act_invoice_conform_invoice_domain_toconform">
            <field name="name">To Conform</field>
            <field name="sequence" eval="10"/>
            <field name="domain">[('conformity_state', '=', 'pending')]</field>
            <field name="act_window" ref="act_invoice_conform_invoice_form"/>
        </record>
        <record model="ir.action.act_window.domain"
                 id="act_invoice_conform_invoice_domain_conformed">
            <field name="name">Conformed</field>
            <field name="sequence" eval="20"/>
            <field name="domain">[('conformity_result', '=', 'conformed')]</field>
            <field name="act_window" ref="act_invoice_conform_invoice_form"/>
        </record>
        <record model="ir.action.act_window.domain"
                 id="act_invoice_conform_invoice_domain_pending">
            <field name="name">Pending to resolve</field>
            <field name="sequence" eval="30"/>
            <field name="domain">[('pending_to_resolve_conformity', '=', True)]</field>
            <field name="act_window" ref="act_invoice_conform_invoice_form"/>
        </record>
        <record model="ir.action.act_window.domain"
                 id="act_invoice_conform_invoice_domain_disconformed">
            <field name="name">Disconformed</field>
            <field name="sequence" eval="40"/>
            <field name="domain">[('conformity_result', '=', 'disconformed')]</field>
            <field name="act_window" ref="act_invoice_conform_invoice_form"/>
        </record>

        <menuitem parent="account_invoice.menu_invoice_in_invoice_form" action="act_invoice_conform_invoice_form"
            id="menu_invoice_conform_invoice_form" sequence="1"/>

        <record model="ir.ui.menu-res.group"
            id="menu_invoice_conform_invoice_form_admin_group">
            <field name="menu" ref="menu_invoice_conform_invoice_form"/>
            <field name="group" ref="account.group_account_admin"/>
        </record>

        <record model="ir.action.act_window"
                 id="act_invoice_conform_credit_note_form">
            <field name="name">Credit Notes to Conform</field>
            <field name="res_model">account.invoice</field>
            <field name="domain">[('type', '=', 'in_credit_note'), ('conformity_state', '!=', None), ('conform_by.users', '=', Eval('context', {}).get('_user', 0))]</field>
            <field name="context">{'type': 'in_credit_note'}</field>
        </record>
        <record model="ir.action.act_window.view"
                 id="act_invoice_conform_credit_note_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="invoice_view_tree"/>
            <field name="act_window" ref="act_invoice_conform_credit_note_form"/>
        </record>
        <record model="ir.action.act_window.view"
                 id="act_invoice_conform_credit_note_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="invoice_view_form"/>
            <field name="act_window" ref="act_invoice_conform_credit_note_form"/>
        </record>
        <record model="ir.action.act_window.domain"
                 id="act_invoice_conform_credit_note_domain_toconform">
            <field name="name">To Conform</field>
            <field name="sequence" eval="10"/>
            <field name="domain">[('conformity_state', '=', 'pending')]</field>
            <field name="act_window" ref="act_invoice_conform_credit_note_form"/>
        </record>
        <record model="ir.action.act_window.domain"
                 id="act_invoice_conform_credit_note_domain_conformed">
            <field name="name">Conformed</field>
            <field name="sequence" eval="20"/>
            <field name="domain">[('conformity_result', '=', 'conformed')]</field>
            <field name="act_window" ref="act_invoice_conform_credit_note_form"/>
        </record>
        <record model="ir.action.act_window.domain"
                 id="act_invoice_conform_credit_note_domain_pending">
            <field name="name">Pending to resolve</field>
            <field name="sequence" eval="30"/>
            <field name="domain">[('pending_to_resolve_conformity', '=', True)]</field>
            <field name="act_window" ref="act_invoice_conform_credit_note_form"/>
        </record>
        <record model="ir.action.act_window.domain"
                 id="act_invoice_conform_credit_note_domain_disconformed">
            <field name="name">Disconformed</field>
            <field name="sequence" eval="40"/>
            <field name="domain">[('conformity_result', '=', 'disconformed')]</field>
            <field name="act_window" ref="act_invoice_conform_credit_note_form"/>
        </record>

        <menuitem parent="account_invoice.menu_invoice_in_credit_note_form"
            action="act_invoice_conform_credit_note_form"
            id="menu_invoice_conform_credit_note_form" sequence="1"/>

        <record model="ir.ui.menu-res.group"
            id="menu_invoice_conform_credit_note_form_admin_group">
            <field name="menu" ref="menu_invoice_conform_credit_note_form"/>
            <field name="group" ref="account.group_account_admin"/>
        </record>

    </data>
</tryton>
