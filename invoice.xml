<?xml version="1.0"?>
<tryton>
    <data>
        <record model="res.group" id="group_conform">
            <field name="name">Conform</field>
        </record>
        <record model="res.user-res.group" id="user_admin_group_conform">
            <field name="user" ref="res.user_admin"/>
            <field name="group" ref="group_conform"/>
        </record>
        <record model="res.user-res.group" id="user_trigger_group_conform">
            <field name="user" ref="res.user_trigger"/>
            <field name="group" ref="group_conform"/>
        </record>

        <!-- conform group user -->
        <record model="ir.ui.view" id="conform_group_user_view_form">
            <field name="model">account.invoice.conform_group-res.user</field>
            <field name="type">form</field>
            <field name="name">conform_group_user_form</field>
        </record>
        <record model="ir.ui.view" id="conform_group_user_view_tree">
            <field name="model">account.invoice.conform_group-res.user</field>
            <field name="type">tree</field>
            <field name="name">conform_group_user_tree</field>
        </record>
        <record model="ir.action.act_window" id="act_conform_group_user_form">
            <field name="name">Conform Group User</field>
            <field name="res_model">account.invoice.conform_group-res.user</field>
        </record>
        <record model="ir.action.act_window.view" id="act_conform_group_user_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="conform_group_user_view_tree"/>
            <field name="act_window" ref="act_conform_group_user_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_conform_group_user_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="conform_group_user_view_form"/>
            <field name="act_window" ref="act_conform_group_user_form"/>
        </record>

        <!-- conform group -->
        <record model="ir.ui.view" id="conform_group_view_form">
            <field name="model">account.invoice.conform_group</field>
            <field name="type">form</field>
            <field name="name">conform_group_form</field>
        </record>
        <record model="ir.ui.view" id="conform_group_view_tree">
            <field name="model">account.invoice.conform_group</field>
            <field name="type">tree</field>
            <field name="name">conform_group_tree</field>
        </record>
        <record model="ir.action.act_window" id="act_conform_group_form">
            <field name="name">Conform Group</field>
            <field name="res_model">account.invoice.conform_group</field>
        </record>
        <record model="ir.action.act_window.view" id="act_conform_group_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="conform_group_view_tree"/>
            <field name="act_window" ref="act_conform_group_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_conform_group_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="conform_group_view_form"/>
            <field name="act_window" ref="act_conform_group_form"/>
        </record>
        <!--  -->
        <menuitem id="menu_counform_group" name="Conform Groups"
                parent="account.menu_account_configuration"
                action="act_conform_group_form" sequence="50"/>

        <!-- account invoice -->
        <record model="ir.ui.view" id="invoice_view_form">
            <field name="model">account.invoice</field>
            <field name="type" eval="None"/>
            <field name="inherit" ref="account_invoice.invoice_view_form"/>
            <field name="name">invoice_form</field>
            <field name="domain"
                eval="[(Eval('context', {}).get('type'), '=', 'in')]"
                pyson="1"/>
        </record>
        <record model="ir.ui.view" id="invoice_view_tree">
            <field name="model">account.invoice</field>
            <field name="type" eval="None"/>
            <field name="inherit" ref="account_invoice.invoice_view_tree"/>
            <field name="name">invoice_tree</field>
            <field name="domain"
                eval="[(Eval('context', {}).get('type'), '=', 'in')]"
                pyson="1"/>
        </record>

        <!-- invoices to conform -->
        <record model="ir.action.act_window" id="act_invoice_conform_invoice_form">
            <field name="name">Invoices to Conform</field>
            <field name="res_model">account.invoice</field>
            <field name="domain"
                eval="[('type', '=', 'in'),
                  ('conformity_state', '!=', None),
                  ('conform_by.users', '=', Eval('context', {}).get('_user', 0))]"
                pyson="1"/>
            <field name="context" eval="{'type': 'in'}" pyson="1"/>
        </record>
        <record model="ir.action.act_window.view"
                 id="act_invoice_conform_invoice_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="invoice_view_tree"/>
            <field name="act_window" ref="act_invoice_conform_invoice_form"/>
        </record>
        <record model="ir.action.act_window.view"
                 id="act_invoice_conform_invoice_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="invoice_view_form"/>
            <field name="act_window" ref="act_invoice_conform_invoice_form"/>
        </record>
        <record model="ir.action.act_window.domain"
                 id="act_invoice_conform_invoice_domain_toconform">
            <field name="name">To Conform</field>
            <field name="sequence" eval="10"/>
            <field name="domain"
                eval="[('conformity_state', '=', 'pending')]"
                pyson="1"/>
            <field name="act_window" ref="act_invoice_conform_invoice_form"/>
        </record>
        <record model="ir.action.act_window.domain"
                 id="act_invoice_conform_invoice_domain_conformed">
            <field name="name">Conforming</field>
            <field name="sequence" eval="20"/>
            <field name="domain"
                eval="[('conformity_state', '=', 'conforming')]"
                pyson="1"/>
            <field name="act_window" ref="act_invoice_conform_invoice_form"/>
        </record>
        <record model="ir.action.act_window.domain"
                 id="act_invoice_conform_invoice_domain_pending">
            <field name="name">Nonconforming Pending</field>
            <field name="sequence" eval="30"/>
            <field name="domain"
                eval="[('conformity_state', '=', 'nonconforming_pending')]"
                pyson="1"/>
            <field name="act_window" ref="act_invoice_conform_invoice_form"/>
        </record>
        <record model="ir.action.act_window.domain"
                 id="act_invoice_conform_invoice_domain_disconformed">
            <field name="name">Nonconforming</field>
            <field name="sequence" eval="40"/>
            <field name="domain"
                eval="[('conformity_state', '=', 'nonconforming')]"
                pyson="1"/>
            <field name="act_window" ref="act_invoice_conform_invoice_form"/>
        </record>

        <menuitem parent="account_invoice.menu_invoice_in_form"
            action="act_invoice_conform_invoice_form"
            id="menu_invoice_conform_invoice_form" sequence="1"
            icon="tryton-list"/>

        <record model="ir.ui.menu-res.group"
            id="menu_invoice_conform_invoice_form_admin_group">
            <field name="menu" ref="menu_invoice_conform_invoice_form"/>
            <field name="group" ref="account.group_account_admin"/>
        </record>

        <!-- access conform button -->
        <record model="ir.model.button" id="conform_button">
            <field name="name">conform</field>
            <field name="string">Conform</field>
            <field name="model" search="[('model', '=', 'account.invoice')]"/>
        </record>
        <record model="ir.model.button-res.group"
                id="conform_button_group">
            <field name="button" ref="conform_button"/>
            <field name="group" ref="group_conform"/>
        </record>
        <record model="ir.model.button-res.group"
                id="conform_button_group_account">
            <field name="button" ref="conform_button"/>
            <field name="group" ref="account.group_account"/>
        </record>

        <!-- access -->
        <record model="ir.model.access" id="access_conform_group">
            <field name="model"
                search="[('model', '=', 'account.invoice.conform_group')]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.model.access" id="access_conform_group_account">
            <field name="model"
                   search="[('model', '=', 'account.invoice.conform_group')]"/>
            <field name="group" ref="account.group_account"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.model.access" id="access_conform_group_account_admin">
            <field name="model"
                search="[('model', '=', 'account.invoice.conform_group')]"/>
            <field name="group" ref="account.group_account_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>
        <record model="ir.model.access" id="access_account_invoice_conform">
            <field name="model"
                search="[('model', '=', 'account.invoice')]"/>
            <field name="group" ref="group_conform"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.model.field.access" id="conform_conformity_state_group_conform">
            <field name="field"
                search="[('model.model', '=', 'account.invoice'),
                  ('name', '=', 'conformity_state')]"/>
            <field name="group" ref="group_conform"/>
	        <field name="perm_read" eval="True"/>
	        <field name="perm_write" eval="True"/>
	        <field name="perm_create" eval="True"/>
	        <field name="perm_delete" eval="True"/>
        </record>
    </data>
</tryton>
