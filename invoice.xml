<tryton>
    <data>
        <record model="ir.ui.view" id="invoice_view_form">
            <field name="model">account.invoice</field>
            <field name="type">form</field>
            <field name="inherit" ref="account_invoice.invoice_view_form"/>
            <field name="name">invoice_form</field>
            <field name="domain">context.get('type') in ('in_invoice', 'in_credit_note')</field>
        </record>
        <record model="ir.ui.view" id="invoice_view_tree">
            <field name="model">account.invoice</field>
            <field name="type">tree</field>
            <field name="inherit" ref="account_invoice.invoice_view_tree"/>
            <field name="name">invoice_tree</field>
            <field name="domain">context.get('type') in ('in_invoice', 'in_credit_note')</field>
        </record>


        <record model="ir.action.act_window" id="act_invoice_conform_invoice_form">
            <field name="name">Invoices to Conform</field>
            <field name="res_model">account.invoice</field>
            <field name="domain">[('conformity_result', '!=', None)]</field>
        </record>

        <record model="ir.action.act_window.view" id="act_invoice_conform_invoice_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="invoice_view_tree"/>
            <field name="act_window" ref="act_invoice_conform_invoice_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_invoice_conform_invoice_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="invoice_view_form"/>
            <field name="act_window" ref="act_invoice_conform_invoice_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_invoice_conform_invoice_domain_toconform">
            <field name="name">To Conform</field>
            <field name="sequence" eval="10"/>
            <field name="domain">[('conformity_result', '=', 'to_conform')]</field>
            <field name="act_window" ref="act_invoice_conform_invoice_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_invoice_conform_invoice_domain_conformed">
            <field name="name">Conformed</field>
            <field name="sequence" eval="10"/>
            <field name="domain">[('conformity_result', '=', 'conformed')]</field>
            <field name="act_window" ref="act_invoice_conform_invoice_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_invoice_conform_invoice_domain_disconformed">
            <field name="name">Disconformed</field>
            <field name="sequence" eval="10"/>
            <field name="domain">[('conformity_result', '=', 'disconformed')]</field>
            <field name="act_window" ref="act_invoice_conform_invoice_form"/>
        </record>

        <menuitem parent="account_invoice.menu_invoices" action="act_invoice_conform_invoice_form"
            id="menu_invoice_conform_invoice_form" sequence="1"/>

    </data>
</tryton>
